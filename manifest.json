{
    "manifest_version": 3,
    "name": "AppleMusic Formats",
    "description": "An extension for displaying formats of Apple Music albums and music-videos.",
    "version": "0.0.4",
    "icons": {
        "16": "logo/16.png",
        "48": "logo/48.png",
        "128": "logo/128.png"
    },
    "host_permissions": [
        "https://music.apple.com/*/album/*",
        "https://music.apple.com/*/music-video/*"
    ],
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "https://music.apple.com/*/album/*",
                "https://music.apple.com/*/music-video/*"
            ]
        }
    ]
}